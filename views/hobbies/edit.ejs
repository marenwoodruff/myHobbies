<h1>Edit your '<%= hobby.name %>' Hobby!</h1>

<div>
  <form method="POST" action="/hobbies/<%= hobby.id %>?_method=PUT">
    <div class="form-group">
      <label for="name">Hobby Name <span class="red">(required)</span></label>
      <input class="form-control" type="text" name="name" value="<%= hobby.name %>" required>
    </div>

    <div class="form-group">
      <label for="description">Description <span class="red">(required)</span></label>
      <input class="form-control" type="text" name="description" value="<%= hobby.description %>" required>
    </div>

    <div class="form-group">
      <label for="difficulty">Difficulty: 0 (lowest) - 5 (highest)</label>
      <input class="form-control" type="number" name="difficulty" value="<%= hobby.difficulty %>" min="0" max="5" step="0.01">
    </div>

    <div class="form-group">
      <label for="levelOfProfficiency">Level of Profficiency: 0 (lowest) - 5 (highest)</label>
      <input class="form-control" type="number" name="levelOfProfficiency" value="<%= hobby.levelOfProfficiency %>" min="0" max="5" step="0.01">
    </div>

    <div class="form-group">
      <input class="btn btn-outline-info margin-top" type="submit" value="Submit">
    </div>
  </form>
</div>