<h1>Add a New Hobby!</h1>

<div>
  <form action="/hobbies" method="POST">
    <div class="form-group">
      <label for="name">Hobby Name <span class="red">(required)</span></label>
      <input class="form-control" type="text" name="name" required>
    </div>

    <div class="form-group">
      <label for="description">Description <span class="red">(required)</span></label>
      <input class="form-control" type="text" name="description" required>
    </div>

    <div class="form-group">
      <label for="difficulty">Difficulty: 0 (lowest) - 5 (highest)</label>
      <input class="form-control" type="number" name="difficulty" min="0" max="5" step="0.01">
    </div>

    <div class="form-group">
      <label for="levelOfProfficiency">Level of Profficiency: 0 (lowest) - 5 (highest)</label>
      <input class="form-control" type="number" name="levelOfProfficiency" min="0" max="5" step="0.01">
    </div>

    <div class="form-group">
      <input class="btn btn-outline-info margin-top" type="submit" value="Submit">
    </div>
  </form>
</div>